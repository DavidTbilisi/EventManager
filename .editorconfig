# Editor configuration, see http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,css,scss,html}]
charset = utf-8

# 4 space indentation
[*.js]
indent_style = space
indent_size = 4

[*.jsx]
indent_style = space
indent_size = 4

[*.ts]
indent_style = space
indent_size = 4

[*.tsx]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4